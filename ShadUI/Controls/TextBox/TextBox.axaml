                <TextBox
                    Classes="Clearable"
                    UseFloatingWatermark="True"
                    Watermark="First Name" />
                <TextBox
                    Classes="Clearable"
                    UseFloatingWatermark="True"
                    Watermark="Last Name" />
                <TextBox
                    Classes="Clearable"
                    Text="john"
                    Watermark="Username" />
                <TextBox
                    Classes="Clearable"
                    Text="12321"
                    Watermark="Search here..."
                    shadui:ControlAssist.Label="Search">
                    <TextBox.InnerRightContent>
                        <PathIcon
