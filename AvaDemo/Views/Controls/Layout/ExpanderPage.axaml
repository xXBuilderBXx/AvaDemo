<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:layout="using:AvaDemo.Views.Controls.Layout"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaDemo.ExpanderPage"
			 x:DataType="layout:ExpanderPageModel">
	<Grid ColumnDefinitions="*, auto">
		<ScrollViewer>
			<StackPanel Spacing="10" Margin="20">
				<shadui:Card HasShadow="True" Padding="20" HorizontalAlignment="Stretch" BorderBrush="{DynamicResource InfoColor20}" Background="{DynamicResource InfoColor10}">
					<TextBlock TextWrapping="Wrap" FontSize="14" Text="Show/hide controls with a header control and inner body control that expands down." />
				</shadui:Card>

				<Expander VerticalAlignment="Top" HorizontalAlignment="Stretch">
					<Expander.Header>
						Hidden Search
					</Expander.Header>
					<Grid RowDefinitions="*,*" ColumnDefinitions="150,*">
						<TextBlock Grid.Row="0" Grid.Column="0"
								   VerticalAlignment="Center">Search</TextBlock>
						<TextBox Grid.Row="0" Grid.Column="1"
								 Watermark="Search text" Width="200" />
						<TextBlock Grid.Row="1" Grid.Column="0"
								   VerticalAlignment="Center">Case sensitive?</TextBlock>
						<CheckBox Grid.Row="1" Grid.Column="1" />
					</Grid>
				</Expander>
			</StackPanel>
		</ScrollViewer>
		<shadui:Sidebar
		Grid.Column="1"
		Width="255"
		Background="{DynamicResource CardBackgroundColor}"
		BorderThickness="1,0,0,0"
		ItemIconContentSpacing="12">
			<StackPanel Spacing="20" Margin="20, 10" HorizontalAlignment="Stretch">
				<StackPanel Spacing="10">
					<shadui:SidebarItemLabel AsSeparator="True" Text="Properties" />
					<Label>Background</Label>
				</StackPanel>
			</StackPanel>
		</shadui:Sidebar>
	</Grid>
</UserControl>
