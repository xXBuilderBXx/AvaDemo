<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="using:AvaDemo"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaDemo.DockPanelPage"
			 x:DataType="local:DockPanelPage">
	<Grid ColumnDefinitions="*, auto">
		<ScrollViewer>
			<StackPanel Spacing="10" Margin="20">
				<shadui:Card HasShadow="True" Padding="20" HorizontalAlignment="Stretch" BorderBrush="{DynamicResource InfoColor20}" Background="{DynamicResource InfoColor10}">
					<TextBlock TextWrapping="Wrap" FontSize="14" Text="Lock controls to a side of the view left/top/right/bottom." />
				</shadui:Card>

				<DockPanel Width="300" Height="300">
					<Panel Background="Red" Height="100" DockPanel.Dock="Top">
						<TextBlock Margin="10">Top</TextBlock>
					</Panel>
					<Panel Background="Blue" Width="100" DockPanel.Dock="Left">
						<TextBlock Margin="10">Left</TextBlock>
					</Panel>
					<Panel Background="Green" Width="100" DockPanel.Dock="Right">
						<TextBlock Margin="10">Right</TextBlock>
					</Panel>
					<Rectangle Fill="Gray" />
				</DockPanel>
			</StackPanel>
		</ScrollViewer>
		<shadui:Sidebar
		Grid.Column="1"
		Width="255"
		Background="{DynamicResource CardBackgroundColor}"
		BorderThickness="1,0,0,0"
		ItemIconContentSpacing="12">
			<StackPanel Spacing="20" Margin="20, 10" HorizontalAlignment="Stretch">
				<StackPanel Spacing="10">
					<shadui:SidebarItemLabel AsSeparator="True" Text="Properties" />
					<Label>Background</Label>
				</StackPanel>
			</StackPanel>
		</shadui:Sidebar>
	</Grid>
</UserControl>
