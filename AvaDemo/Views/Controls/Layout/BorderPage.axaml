<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:layout="using:AvaDemo.Views.Controls.Layout"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaDemo.BorderPage"
			 x:DataType="layout:BorderPageModel">
	<Grid ColumnDefinitions="*, auto">
		<ScrollViewer>
			<StackPanel Spacing="10" Margin="20">
				<shadui:Card HasShadow="True" Padding="20" HorizontalAlignment="Stretch" BorderBrush="{DynamicResource InfoColor20}" Background="{DynamicResource InfoColor10}">
					<TextBlock TextWrapping="Wrap" FontSize="14" Text="Most controls such as buttons, panels, grids and textboxes have border properties!" />
				</shadui:Card>

				<Border Background="{Binding Background}"
						BorderBrush="{Binding BorderBrush}"
						BorderThickness="{Binding BorderThicknessBrush}"
						CornerRadius="3"
						Padding="10" Margin="10" />
			</StackPanel>
		</ScrollViewer>
		<shadui:Sidebar
		Grid.Column="1"
		Width="255"
		Background="{DynamicResource CardBackgroundColor}"
		BorderThickness="1,0,0,0"
		ItemIconContentSpacing="12">
			<StackPanel Spacing="20" Margin="20, 10" HorizontalAlignment="Stretch">
				<StackPanel Spacing="10">
					<shadui:SidebarItemLabel AsSeparator="True" Text="Properties" />
					<Label>Background</Label>
					<ColorPicker Color="{Binding Background}" IsAlphaVisible="True">
						<ColorPicker.Content>
							<StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Stretch">
								<Border Width="20" Height="20"
										Background="{Binding Background}"
										CornerRadius="{DynamicResource SmCornerRadius}" />
								<TextBlock Text="{Binding Background}" Classes="Clearable" />
							</StackPanel>
						</ColorPicker.Content>
					</ColorPicker>
					<SelectableTextBlock Text="{Binding Background}"></SelectableTextBlock>
				</StackPanel>

				<StackPanel Spacing="10">
					<Label>Border Brush</Label>
					<ColorPicker Color="{Binding BorderBrush}" IsAlphaVisible="False">
						<ColorPicker.Content>
							<StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Stretch">
								<Border Width="20" Height="20"
										Background="{Binding BorderBrush}"
										CornerRadius="{DynamicResource SmCornerRadius}" />
								<TextBlock Text="{Binding BorderBrush}" Classes="Clearable" />
							</StackPanel>
						</ColorPicker.Content>
					</ColorPicker>
					<SelectableTextBlock Text="{Binding BorderBrush}"></SelectableTextBlock>
				</StackPanel>

				<StackPanel>
					<Label>Border Thickness</Label>
					<Slider Value="{Binding BorderThickness}" Minimum="0" Maximum="100" />
					<SelectableTextBlock Text="{Binding BorderThickness}"></SelectableTextBlock>
				</StackPanel>
			</StackPanel>
		</shadui:Sidebar>
	</Grid>
</UserControl>
