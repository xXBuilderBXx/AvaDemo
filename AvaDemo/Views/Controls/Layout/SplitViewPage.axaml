<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:layout="using:AvaDemo.Views.Controls.Layout"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaDemo.SplitViewPage"
			 x:DataType="layout:SplitViewPageModel">
	<Grid ColumnDefinitions="*, auto">
		<ScrollViewer>
			<StackPanel Spacing="10" Margin="20">
				<shadui:Card HasShadow="True" Padding="20" HorizontalAlignment="Stretch" BorderBrush="{DynamicResource InfoColor20}" Background="{DynamicResource InfoColor10}">
					<TextBlock TextWrapping="Wrap" FontSize="14" Text="Create sidebar layouts that can collapse or expand!" />
				</shadui:Card>

				<SplitView IsPaneOpen="True"
						   DisplayMode="Inline"
						   OpenPaneLength="200">
					<SplitView.Pane>
						<Panel Background="gray">
							<TextBlock Text="Sidebar"
								   FontSize="24"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Center"/>
						</Panel>
						
					</SplitView.Pane>

					<Grid Background="blue">
						<TextBlock Text="Content"
								   FontSize="24"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Center"/>
					</Grid>
				</SplitView>
			</StackPanel>
		</ScrollViewer>
		<shadui:Sidebar
		Grid.Column="1"
		Width="255"
		Background="{DynamicResource CardBackgroundColor}"
		BorderThickness="1,0,0,0"
		ItemIconContentSpacing="12">
			<StackPanel Spacing="20" Margin="20, 10" HorizontalAlignment="Stretch">
				<StackPanel Spacing="10">
					<shadui:SidebarItemLabel AsSeparator="True" Text="Properties" />
					<Label>Background</Label>
				</StackPanel>
			</StackPanel>
		</shadui:Sidebar>
	</Grid>
</UserControl>
