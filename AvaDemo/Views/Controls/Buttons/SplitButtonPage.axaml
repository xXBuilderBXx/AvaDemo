<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:buttons="using:AvaDemo.Views.Controls.Buttons"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:shadui="using:ShadUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaDemo.SplitButtonPage"
			 x:DataType="buttons:SplitButtonPageModel">
	<Grid ColumnDefinitions="*, auto">
		<ScrollViewer>
			<StackPanel Spacing="10" Margin="20">
				<shadui:Card HasShadow="True" Padding="20" HorizontalAlignment="Stretch" BorderBrush="{DynamicResource InfoColor20}" Background="{DynamicResource InfoColor10}">
					<TextBlock TextWrapping="Wrap" FontSize="14" Text="Button with an option dropdown menu." />
				</shadui:Card>

				<SplitButton Content="Content" >
					<SplitButton.Flyout>
						<MenuFlyout Placement="Bottom">
							<MenuItem Header="Item 1">
								<MenuItem Header="Subitem 1" />
								<MenuItem Header="Subitem 2" />
								<MenuItem Header="Subitem 3" />
							</MenuItem>
							<MenuItem Header="Item 2"
									  InputGesture="Ctrl+A" />
							<MenuItem Header="Item 3" />
						</MenuFlyout>
					</SplitButton.Flyout>
				</SplitButton>
			</StackPanel>
		</ScrollViewer>
		<shadui:Sidebar
		Grid.Column="1"
		Width="255"
		Background="{DynamicResource CardBackgroundColor}"
		BorderThickness="1,0,0,0"
		ItemIconContentSpacing="12">
			<StackPanel Spacing="20" Margin="20, 10" HorizontalAlignment="Stretch">
				<StackPanel Spacing="10">
					<shadui:SidebarItemLabel AsSeparator="True" Text="Properties" />
					<Label>Background</Label>
				</StackPanel>
			</StackPanel>
		</shadui:Sidebar>
	</Grid>
</UserControl>
